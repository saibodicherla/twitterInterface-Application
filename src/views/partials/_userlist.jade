for friend in recentfriends
  li
    .circle--fluid
      .circle--fluid--cell.circle--fluid--primary
        a.app--tweet--author
          .app--avatar(style="background-image: url(" + friend.friendimage + ")")
            img(src= friend.friendimage)
          h4 #{friend.friendname}
          p @#{friend.friendscreenname}
      .circle--fluid--cell
        a.button.button-text Unfollow
